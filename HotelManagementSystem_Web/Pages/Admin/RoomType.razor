@page "/admin/room-type"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using HotelManagementSystem_Web.Layout.AdminLayout
@layout AdminLayout
@inject HttpClient _httpClient
@inject NavigationManager _nav
@inject IJSRuntime JS

<h3 class="text-center my-4 text-danger">Room Type</h3>

<!-- Filter Input -->
<div class="container mb-3">
    <div class="col-12 d-flex align-items-center">
        <!-- Input with right margin -->
        <input class="form-control me-2 w-75"
               placeholder="RoomTypeName"
               @bind="_roomTypeFilterText.RoomTypeName"
               @bind:event="oninput"/>

        <!-- Button -->
        <button class="btn btn-danger btn-sm" @onclick="ClearFilter">Clear</button>
    </div>
</div>

<!-- Modal for Adding Room Type -->
<div class="modal fade" id="addRoomTypeModal" tabindex="-1" aria-labelledby="addRoomTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Room Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@_model" OnValidSubmit="HandleRoomTypeForm">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>

                    <div class="mb-3">
                        <label class="form-label">Room Type</label>
                        <InputText class="form-control" @bind-Value="_model.RoomTypeName"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputText class="form-control" @bind-Value="_model.Description"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <InputNumber class="form-control" @bind-Value="_model.Price"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image</label>
                        <InputFile OnChange="HandleImageUpload" accept="image/png, image/jpeg"/>
                    </div>

                    @if (!string.IsNullOrEmpty(_model.RoomImg))
                    {
                        <div class="mb-3">
                            <label class="form-label">Image Preview</label>
                            <div class="border rounded p-2" style="max-width: 300px;">
                                <img src="data:@_model.RoomImgMimeType;base64,@_model.RoomImg"
                                     class="img-fluid rounded"
                                     alt="Room Image Preview"/>
                            </div>
                        </div>
                    }

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Save</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>


<div class="d-flex justify-content-md-end p-xl-2 mb-3">
    <button class="btn btn-outline-danger ms-3"
            data-bs-toggle="modal"
            data-bs-target="#addRoomTypeModal">
        <i class="bi bi-plus"></i> Add Room Type
    </button>
</div>

<!---Card Display--->
<div style="max-height: 600px; overflow-y: auto;">

    <div class="container">
        <div class="row">
            @if (isLoading)
            {
                <div class="mt-5 align-items-center d-flex flex-column justify-content-center">
                    <div class="spinner-grow text-danger" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                    <p class="text-danger fs-6 mt-3">Loading...</p>
                </div>
            }

            @foreach (var room in RoomTypeLst)
            {
                string roomTypeDetail = $"room-type-edit{room.RoomTypeId}";
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <NavLink href="@roomTypeDetail" class="text-decoration-none">
                        <div class="card h-100 shadow-sm">

                            <!-- Room image with fixed height and object-fit -->
                            <img src="@(!string.IsNullOrEmpty(room.RoomImg)
                                          ? $"data:{room.RoomImgMimeType};base64,{room.RoomImg}"
                                          : "./images/image1.jpg")"
                                 class="card-img-top"
                                 style="height: 150px; object-fit: cover;"/>

                            <!-- Card body with room info -->
                            <div class="card-body py-2 px-3">
                                <!-- Room type name -->
                                <h6 class="card-title mb-1" style="font-size: 16px;">@room.RoomTypeName</h6>
                                <!-- Room price -->
                                <p class="card-text text-muted" style="font-size: 14px;">$@room.Price/night</p>
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        </div>
    </div>
</div>



    

    
