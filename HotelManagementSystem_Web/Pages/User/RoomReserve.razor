@page "/user/room-reserve"
@using HotelManagementSystem_Web.Layout.UserLayout
@layout UserLayout

<div class="container ">
  <div class="offset-1 d-flex justify-content-start align-items-center">
    <NavLink href="user/room-detail" class="btn me-2">
      <i class="text-dark fa-solid fa-arrow-left"></i>
    </NavLink>
    <h4 class="my-4">Confirm and pay</h4>
  </div>
  <div class="row">
    <div class="offset-1 col-lg-5 mb-4">
      <div class="alert alert-light border d-flex align-items-center justify-content-between p-4"
           style="border-radius: 15px">
        <div>
          <div style="font-weight: 700;" class="mb-1">This is a rare find.</div>
          <div>Kevin's place is usually booked.</div>
        </div>
        <i class="fa-solid fa-gem text-danger fs-3"></i>
      </div>

      <h5 class="mt-4">Your trip</h5>
      <div class="d-flex justify-content-between py-3 ">
        <div>
          <div style="font-weight: 700;" class="mb-1">Dates</div>
          <div>Jun 6 â€“ 8</div>
        </div>
        <a href="#" class="text-dark">Edit</a>
      </div>
      <div class="d-flex justify-content-between mb-4 ">
        <div>
          <div style="font-weight: 700;" class="mb-1">Guests</div>
          <div>1 guest</div>
        </div>
        <a href="#" class="text-dark">Edit</a>
      </div>
      <hr/>
      <h5 class="mt-4 mb-3">Log in or sign up to book</h5>

      <form>
        <div class="p-2 mb-2 alert-light border" style="border-radius: 15px; ">
          <div class="">
            <select class="form-select no-outline" style="border: none">
              <option selected>Myanmar (+95)</option>
            </select>
          </div>
          <hr/>
          <div class="">
            <input type="text" class="form-control no-outline bg-transparent" style="border: none"
                   placeholder="Phone number">
          </div>
        </div>
        <small class=" form-text text-muted mb-3">
          <small>
            We'll call or text you to confirm your number. Standard message and data rates apply.
            <a href="#" class="text-dark">Privacy
              Policy</a>
          </small>
        </small>
        <NavLink href="user/room-booking">
          <button style="height: 50px; border-radius: 10px" type="" class="btn btn-danger w-100 mt-2">Continue
          </button>
        </NavLink>
      </form>

      <div class="text-center my-2">or</div>

      <div class="d-grid gap-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <button style="height: 50px; border-radius: 10px" class="btn w-100 btn-outline-secondary"><i
              class="fab fa-facebook me-2"></i></button>
          <button style="height: 50px; border-radius: 10px" class="btn mx-3 w-100 btn-outline-secondary"><i
              class="fab fa-google me-2"></i></button>
          <button style="height: 50px; border-radius: 10px" class="btn w-100 btn-outline-secondary"><i
              class="fab fa-apple me-2"></i></button>
        </div>
        <button style="height: 50px; border-radius: 10px" class="btn btn-outline-secondary"><i
            class="fa-regular fa-envelope me-2"></i>Continue with email
        </button>
      </div>
    </div>

    <div class=" col-lg-5" style="padding-right: 50px; padding-left: 50px">
      <div class="card px-1 pt-1" style="border-radius: 15px">
        <div class="d-flex justify-content-start align-items-start">
          <div class="card-body d-flex justify-content-start align-items-center">
            <div class="me-3" style="width: 110px; height: 110px; border-radius: 15px">
              <img src="./images/image1.jpg" class="img-fluid  w-100 h-100" alt="Room" style="border-radius: 15px; object-fit: cover; object-position: center">
            </div>
            <div>
              <h6 class="card-title mb-1">Studio Chill PhrakhanongBTS-WiFi</h6>
              <p class="card-text mb-1 small">Entire rental unit</p>
              <p class="card-text mb-0 small"><i class="fa-solid fa-star text-warning"></i> 4.80 (25 reviews)</p>
            </div>
          </div>
        </div>
        <div class="px-3 pb-3">
          <hr/>
          <h6>Your total</h6>
          <div class="d-flex justify-content-between">
            <span>$20.50 x 2 nights</span>
            <span>$40.99</span>
          </div>
          <hr/>
          <div class="d-flex justify-content-between fw-bold mt-2">
            <span>Total (USD)</span>
            <span>$40.99</span>
          </div>
          <a href="#" class="text-dark d-block mt-2 small align-items-end">Price breakdown</a>
        </div>
      </div>
    </div>
  </div>
</div>
