@page "/reset-password/{email}"
@using HotelManagementSystem_Web.Layout.AuthLayout
@layout AuthLayout

@inject HttpClient _httpClient
@inject NavigationManager _navigation

<div class="card shadow-lg p-4" style="width : 80% ; max-width:500px">
    <div class="card-body">
        <h4 class="text-center mb-4">Forgot Password</h4>

        <EditForm Model="@_resetPasswordRequestModel" OnvalidSubmit="HandleResetPassword">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="_resetPasswordRequestModel.Email" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label">OTP Code</label>
                <InputText class="form-control" @bind-Value="_resetPasswordRequestModel.OTP"  />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText type="password" class="form-control" @bind-Value="_resetPasswordRequestModel.password"  />
            </div>
            <button type="submit" class="btn btn-danger w-100 mt-3">
                Reset Password
            </button>
        </EditForm>
    </div>
</div>
