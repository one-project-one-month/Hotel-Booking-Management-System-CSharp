@inherits LayoutComponentBase

@code {
    private bool isSidebarCollapsed = false;

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
    }

}

<style>
    .sidebar {
        background-color: #fff;
        border-right: 2px solid #6c757d;
        min-height: 100vh;
        transition: width 0.3s;
    }

    .sidebar.collapsed {
        width: 70px !important;
        overflow-x: hidden;
    }

    .sidebar.expanded {
        width: 220px !important;
    }

    .sidebar .nav-link {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .text-pink {
        color: #e83e8c;
    }

    .sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
    }

    .toggle-btn {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #e83e8c;
    }

    .main-content {
        transition: margin-left 0.3s;

    }

    .navbar-custom {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 0.5rem 1rem;
    }
</style>

<!-- Top Navbar -->
<nav class="navbar navbar-custom d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <button class="btn d-md-none me-2" type="button" data-bs-toggle="offcanvas">
            <i class="bi bi-list fs-4 text-pink"></i>
        </button>
    </div>

   @*  <div>
        <i class="bi bi-bell text-pink me-3"></i>
        <button type="button" class="btn btn-secondary" data-container="body" data-toggle="popover"
                data-placement="left" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
            <i class="bi bi-person-circle text-pink"></i>
        </button>               
    </div> *@

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-bell fs-5 text-pink"></i>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button"
                    id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle fs-5 text-pink"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                <li>
                    <NavLink class="dropdown-item" href="/userprofile/admin-profile">Create Profile</NavLink>
                </li>
                <li>
                    <NavLink class="dropdown-item" href="/login">Logout</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="d-flex">

    <!-- Sidebar -->
    <div class="sidebar @(isSidebarCollapsed ? "collapsed" : "expanded")">
        <div class="sidebar-header ">
            <h5 class="text-pink" style="white-space: nowrap;">@(isSidebarCollapsed ? "" : "HMS")</h5>
            <button class="toggle-btn d-none d-md-block" @onclick="ToggleSidebar">
                <i class="bi bi-list"></i>
            </button>
        </div>

        <ul class="nav flex-column px-2">
            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin-home">
                    <i class="bi bi-journal-bookmark"></i> @(isSidebarCollapsed ? "" : " Dashboard")
                </NavLink>
            </li>
            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/booking">
                    <i class="bi bi-journal-bookmark"></i> @(isSidebarCollapsed ? "" : " Booking")
                </NavLink>
            </li>
            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/guest">
                    <i class="bi bi-people"></i> @(isSidebarCollapsed ? "" : " Guest")
                </NavLink>
            </li>

            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/room-type">
                    <i class="bi bi-door-closed"></i> @(isSidebarCollapsed ? "" : " Room Type")
                </NavLink>
            </li>
            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/room">
                    <i class="bi bi-door-closed"></i> @(isSidebarCollapsed ? "" : " Room")
                </NavLink>
            </li>

            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/userprofile/admin-profile-list">
                    <i class="bi bi-person"></i> @(isSidebarCollapsed ? "" : " User Profile")
                </NavLink>
            </li>
            <li class="nav-item my-1">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/invoices">
                    <i class="bi bi-receipt"></i> @(isSidebarCollapsed ? "" : " Invoices")
                </NavLink>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <main class="main-content flex-grow-1 px-4 py-2">
        <article>
            <div class="py-2">@Body</div>
        </article>
    </main>
</div>

<!-- Mobile Offcanvas Sidebar -->
<div class="offcanvas offcanvas-start bg-white border-end border-2 border-secondary" tabindex="-1" id="mobileSidebar">
    <div class="offcanvas-header">
        <h5 class="text-pink">HMS</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="nav flex-column">

            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/booking">Booking
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/guest">Guest</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/room">Room</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/room-type">Room Type
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/userprofile/admin-profile">
                    User Profile
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-secondary border-bottom text-danger" href="/admin/invoices">Invoices</NavLink>
            </li>
        </ul>
    </div>
</div>
